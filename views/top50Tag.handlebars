<section class='my-4 px-2 md:px-0 h-full'>
  <div class='container mx-auto flex items-center flex-wrap pt-4 pb-12'>
    <nav id='store' class='w-full'>
      <div class='w-full container mx-auto flex flex-wrap items-center justify-between mt-0  py-3'>
        <a class='uppercase tracking-wide no-underline hover:no-underline font-bold text-gray-800 text-2xl'
          href='/books'>
          Books
        </a>
        <div class='flex items-center' id='store-nav-content'>
          <p class="md:space-x-1 space-y-1 md:space-y-0 mb-4">
            <button
              class="invisible inline-block px-6 py-2.5 bg-white text-black font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-gray-500 hover:shadow-lg focus:bg-gray-300 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-gray-300 active:shadow-lg transition duration-150 ease-in-out"
              type="button" data-bs-toggle="collapse" data-bs-target="#genre" aria-expanded="false"
              aria-controls="collapseExample">
              <svg class='fill-current hover:text-black' xmlns='http://www.w3.org/2000/svg' width='24' height='24'
                viewBox='0 0 24 24'>
                <path d='M7 11H17V13H7zM4 7H20V9H4zM10 15H14V17H10z'></path>
              </svg>
            </button>
            <button
              class="inline-block px-6 py-2.5 bg-white text-black font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-gray-500 hover:shadow-lg focus:bg-gray-300 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-gray-300 active:shadow-lg transition duration-150 ease-in-out"
              type="button" data-bs-toggle="collapse" data-bs-target="#searchbar" aria-expanded="false"
              aria-controls="collapseExample">
              <svg class='fill-current hover:text-black' xmlns='http://www.w3.org/2000/svg' width='24' height='24'
                viewBox='0 0 24 24'>
                <path
                  d='M10,18c1.846,0,3.543-0.635,4.897-1.688l4.396,4.396l1.414-1.414l-4.396-4.396C17.365,13.543,18,11.846,18,10 c0-4.411-3.589-8-8-8s-8,3.589-8,8S5.589,18,10,18z M10,4c3.309,0,6,2.691,6,6s-2.691,6-6,6s-6-2.691-6-6S6.691,4,10,4z'>
                </path>
              </svg>
            </button>
          </p>
          <div class="collapse" id="searchbar">
            <div class="w-96 block p-6 rounded-lg shadow-lg bg-white">
              {{!-- search form --}}
              <div class="container mx-auto w-full px-4 ">
                <form id="search-form" class="relative mt-3 rounded-md shadow-sm">
                  <label for="" class="mb-3 block text-base font-medium text-black">
                    Searched by
                  </label>
                  <input type="text" name="value" id="search-input"
                    class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded-md border-gray-300 py-3 px-[14px] text-base outline-none focus-visible:shadow-none"
                    placeholder="Please Enter">
                  <div class="absolute inset-y-0 right-0 flex items-center">
                    <label for="searchBar" class="sr-only">searchbar</label>
                    <select id="searchOptions" name="options"
                      class="h-full rounded-md border-transparent bg-transparent py-0 pl-2 pr-7 text-gray-500 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm xl:text-md">
                      <option value="title">Book Title</option>
                      <option value="author">Author Name</option>
                      <option value="genre">Genre</option>
                    </select>
                  </div>
                  <button id='search-btn' type="submit"
                    class="group relative flex w-full justify-center rounded-md border border-transparent bg-gray-300 py-2 px-4 text-sm font-medium text-black hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
                    <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                      <svg class="fill-current hover:text-black-400" xmlns="http://www.w3.org/2000/svg" width="24"
                        height="24" viewBox="0 0 24 24">
                        <path
                          d="M10,18c1.846,0,3.543-0.635,4.897-1.688l4.396,4.396l1.414-1.414l-4.396-4.396C17.365,13.543,18,11.846,18,10 c0-4.411-3.589-8-8-8s-8,3.589-8,8S5.589,18,10,18z M10,4c3.309,0,6,2.691,6,6s-2.691,6-6,6s-6-2.691-6-6S6.691,4,10,4z" />
                      </svg>
                    </span>
                    Search
                  </button>
                </form>
              </div>
            </div>
          </div>

        </div>
      </div>
    </nav>
    <section class="h-full mb-12 px-2">
      <ul class=' flex flex-row md:flex-row  list-none border-b-0 pl-0 mb-4'>
        <a href='/books/'
          class=' w-full block font-medium text-center text-xs leading-tight uppercase border-x-0 border-t-0 border-b-2 border-transparent px-6 py-3 my-2 hover:border-transparent hover:bg-gray-100 focus:border-transparent'>All
          Books</a>
        <a href='/books/trending'
          class=' w-full block font-medium text-center text-xs leading-tight uppercase border-x-0 border-t-0 border-b-2 border-transparent px-6 py-3 my-2 hover:border-transparent hover:bg-gray-100 focus:border-transparent'>Trending</a>
        <a href='/books/recent'
          class=' w-full block font-medium text-center text-xs leading-tight uppercase border-x-0 border-t-0 border-b-2 border-transparent px-6 py-3 my-2 hover:border-transparent hover:bg-gray-100 focus:border-transparent'>Recently
          Added</a>
        <a href='/books/popular'
          class='nav-link w-full block font-medium text-center text-xs leading-tight uppercase border-x-0 border-t-0 border-b-2 border-transparent px-6 py-3 my-2 hover:border-transparent hover:bg-gray-100 focus:border-transparent'
          id='tabs-mst-popular'>Most Popular</a>
        <a href='/books/best-seller'
          class='nav-link w-full block font-medium text-center text-xs leading-tight uppercase border-x-0 border-t-0 border-b-2 border-transparent px-6 py-3 my-2 hover:border-transparent hover:bg-gray-100 focus:border-transparent'
          id='tabs-best-seller'>Best Sellers</a>
        <a href='/books/top50'
          class=' w-full block font-medium text-center text-xs leading-tight uppercase border-x-0 border-t-0 border-b-2  px-6 py-3 my-2 text-blue-600 hover:border-b-blue-600 hover:bg-gray-100 focus:border-transparent  active'
          id='tabs-top-50'>Top 50</a>
      </ul>

      <div class='' id='tabs-tabContent px-24'>
        <div class='tab-pane fade show active' id='tabs-trending'>
          <div class="tab-content" id="tabs-tabContent">
            <div class="tab-pane fade show active" id="tabs-trending">
              {{!-- TRENDING BOOKS --}}
              <section class="flex flex-col">
                <h2 class="text-xl font-semibold text-yellow-500">Top 50</h2>

                <div class="flex flex-col md:grid md:grid-cols-5 md:gap-4">
                  {{#each books.Books}}
                  <div class='flex flex-col items-center rounded-lg'>
                    <a class='p-4 hover:bg-gray-50 rounded-md' href={{id}}>
                      <img class='w-36' src='/images/book.png' />
                      <div class=' flex items-center justify-between'>
                        <p class='mt-1 font-semibold'>{{format_title title}}</p>

                      </div>
                      <span class="flex flex-col gap-2">
                        <p class='mt-1 rounded-sm text-gray-900'>by {{author}}</p>
                        <p class=' rounded-sm text-gray-900 text-sm'>Published in {{publishingDate}}</p>
                        <p class=' rounded-sm text-gray-900 text-sm'> {{format_body description}}...</p>
                        <div class="flex flex-row justify-between">
                          <p class='px-2 rounded-md text-blue-500 border-2 border-blue-500 w-min'>{{genre}}</p>
                      </span>
                      <svg class='h-6 w-6 fill-current text-gray-500 hover:text-black'
                        xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24'>
                        <path
                          d='M12,4.595c-1.104-1.006-2.512-1.558-3.996-1.558c-1.578,0-3.072,0.623-4.213,1.758c-2.353,2.363-2.352,6.059,0.002,8.412 l7.332,7.332c0.17,0.299,0.498,0.492,0.875,0.492c0.322,0,0.609-0.163,0.792-0.409l7.415-7.415 c2.354-2.354,2.354-6.049-0.002-8.416c-1.137-1.131-2.631-1.754-4.209-1.754C14.513,3.037,13.104,3.589,12,4.595z M18.791,6.205 c1.563,1.571,1.564,4.025,0.002,5.588L12,18.586l-6.793-6.793C3.645,10.23,3.646,7.776,5.205,6.209 c0.76-0.756,1.754-1.172,2.799-1.172s2.035,0.416,2.789,1.17l0.5,0.5c0.391,0.391,1.023,0.391,1.414,0l0.5-0.5 C14.719,4.698,17.281,4.702,18.791,6.205z'>
                        </path>
                      </svg>
                  </div>
                  </a>
                </div>
                {{/each}}
            </div>
    </section>
  </div>
  <div class="tab-pane fade">
    Trending
  </div>
  <div class="tab-pane fade">
    Recently added
  </div>
  <div class="tab-pane fade">
    most Popular
  </div>
  <div class="tab-pane fade">
    B S
  </div>
  <div class="tab-pane fade">
    TOP 50
  </div>
  </div>
</section>