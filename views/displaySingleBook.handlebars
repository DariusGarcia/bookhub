<section class="bg-white py-8 container mx-auto md:w-full  p-6 flex flex-col">  
        <ul class="nav nav-tabs flex flex-col md:flex-row flex-wrap list-none border-b-0 pl-0 mb-4" id="tabs-tabFill" role="tablist">
            <li class="nav-item flex-auto text-center" role="presentation">
                <a href="#tabs-homeFill" class=" nav-link w-full block font-medium text-xs leading-tight uppercase border-x-0 border-t-0 border-b-2 border-transparent px-6 py-3 my-2 hover:border-transparent hover:bg-gray-100 focus:border-transparent active
                " id="tabs-home-tabFill" data-bs-toggle="pill" data-bs-target="#tabs-homeFill" role="tab"
                aria-controls="tabs-homeFill" aria-selected="true">Book</a>
            </li>
            <li class="nav-item flex-auto text-center" role="presentation">
                <a href="#tabs-profileFill" class=" nav-link w-full block font-medium text-xs leading-tight uppercase border-x-0 border-t-0 border-b-2 border-transparent px-6 py-3 my-2 hover:border-transparent hover:bg-gray-100 focus:border-transparent
                " id="tabs-profile-tabFill" data-bs-toggle="pill" data-bs-target="#tabs-profileFill" role="tab"
                aria-controls="tabs-profileFill" aria-selected="false">Update</a>
            </li>
            
            </ul>
            <div class="tab-content" id="tabs-tabContentFill">
            <div class="tab-pane fade show active" id="tabs-homeFill" role="tabpanel" aria-labelledby="tabs-home-tabFill">
                <!-- Tab 1 content fill home -->
                <section class="relative z-10 overflow-hidden bg-white py-12">
                    <div class="border-2 container mx-auto">
                        <div class="-mx-4 flex flex-wrap lg:justify-between">
                            <div class="w-full px-4 lg:w-1/2 xl:w-6/12 border-gray-50 ">
                                <div class="relative rounded-lg bg-white p-4 shadow-md sm:p-4">
                                    <div class="flex flex-col gap-2">
                                        <div class="flex justify-center  w-full">
                                            <img src="https://i.pinimg.com/564x/db/5b/85/db5b853d663d5243fb55efe7900127f5.jpg" alt="image" class="w-36 md:w-48"/>
                                        </div>
                                        <h3 class="text-xl font-bold">
                                         {{book.title}}
                                        </h3>
                                        <h4 class="text-dark text-lg font-semibold">
                                            By {{book.author}}
                                        </h4>
                                        <p class="text-base font-medium italic ">
                                            {{book.description}}
                                        </p>
                                        <p class="p-2 bg-yellow-400 w-min  text-base">
                                            {{book.genre}}
                                        </p>
                                        <p class="text-body-color text-base">
                                            Published in {{book.publishingDate}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="tab-pane fade" id="tabs-profileFill" role="tabpanel" aria-labelledby="tabs-profile-tabFill">
                <!-- Tab 2 content fill update -->
                <section class="relative z-10 overflow-hidden bg-white py-12">
                    <div class=" container mx-auto">
                        <div class=" -mx-4 flex flex-wrap items-center lg:justify-between">
                            <div class="w-full px-4 lg:w-1/2 xl:w-6/12 border-gray-100 border-2 ">
                                <div class="relative rounded-lg bg-white p-4  sm:p-4">
                                    <div class="flex flex-col gap-2">
                                        <div class="flex justify-center  w-full">
                                            <img src="https://i.pinimg.com/564x/db/5b/85/db5b853d663d5243fb55efe7900127f5.jpg" alt="image" class="w-36 md:w-48"/>
                                        </div>
                                        <h3 class="text-xl font-bold">
                                            {{book.title}}
                                        </h3>
                                        <h4 class="text-dark text-lg font-semibold">
                                            By {{book.author}}
                                        </h4>
                                        <p class="text-base font-medium italic ">
                                            {{book.description}}
                                        </p>
                                        <p class="p-2 bg-yellow-400 w-min text-base">
                                            {{book.genre}}
                                        </p>
                                        <p class="text-body-color text-base">
                                            Published in {{book.publishingDate}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="w-full px-4 lg:w-1/2 xl:w-5/12">
                                <div class="relative rounded-lg bg-white p-8 shadow-lg sm:p-12">
                                    <form id="update-book-form">
                                        <div class="mb-6">
                                            <input type="text"  placeholder="Book Title" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                                        </div>
                                        <div class="mb-6">
                                            <input type="text"  placeholder="Author Name" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                                        </div>
                                        <div class="mb-6">
                                            <input type="text"  placeholder="Genre" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                                        </div>
                                        <div class="mb-6">
                                            <input type="text"  placeholder="Date Published" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                                        </div>
                                        <div class="mb-6">
                                            <label for="description" class="text-black-100">Book description</label>
                                            <textarea rows="6" placeholder="Description" class="text-body-color border-[f0f0f0] focus:border-primary w-full resize-none rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none">
                                            </textarea>
                                        </div>
                                        <button type="submit" id='update-book-btn' class='bg-dark border-primary w-full rounded border p-3 text-black transition hover:bg-opacity-70 hover:bg-green-400'> Update book </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        {{> footer}}
    </section>