<section class="bg-white py-8 container mx-auto w-1/2 md:w-full xl:w-1/2 p-6 flex flex-col">  
        <ul class="nav nav-tabs flex flex-col md:flex-row flex-wrap list-none border-b-0 pl-0 mb-4" id="tabs-tabFill" role="tablist">
            <li class="nav-item flex-auto text-center" role="presentation">
                <a href="#tabs-homeFill" class="
                nav-link
                w-full
                block
                font-medium
                text-xs
                leading-tight
                uppercase
                border-x-0 border-t-0 border-b-2 border-transparent
                px-6
                py-3
                my-2
                hover:border-transparent hover:bg-gray-100
                focus:border-transparent
                active
                " id="tabs-home-tabFill" data-bs-toggle="pill" data-bs-target="#tabs-homeFill" role="tab"
                aria-controls="tabs-homeFill" aria-selected="true">Book</a>
            </li>
            <li class="nav-item flex-auto text-center" role="presentation">
                <a href="#tabs-profileFill" class="
                nav-link
                w-full
                block
                font-medium
                text-xs
                leading-tight
                uppercase
                border-x-0 border-t-0 border-b-2 border-transparent
                px-6
                py-3
                my-2
                hover:border-transparent hover:bg-gray-100
                focus:border-transparent
                " id="tabs-profile-tabFill" data-bs-toggle="pill" data-bs-target="#tabs-profileFill" role="tab"
                aria-controls="tabs-profileFill" aria-selected="false">Update</a>
            </li>
            
            </ul>
            <div class="tab-content" id="tabs-tabContentFill">
            <div class="tab-pane fade show active" id="tabs-homeFill" role="tabpanel" aria-labelledby="tabs-home-tabFill">
                <!-- Tab 1 content fill home -->
                <section class="relative z-10 overflow-hidden bg-white py-20 lg:py-[120px]">
                    <div class="container mx-auto">
                        <div class="-mx-4 flex flex-wrap lg:justify-between">
                            <div class="w-full px-4 lg:w-1/2 xl:w-6/12">
                                <div class="relative rounded-lg bg-white p-8 shadow-lg sm:p-12">
                                    <div>
                                        <img src="https://raisingintruth.com/wp-content/uploads/2016/02/coming-soon.jpg" alt="image" class="w-full"/>
                                        <div class="mb-7">
                                        {{book.title}}
                                        </div>
                                        <p class="text-body-color mb-11 text-base font-medium italic sm:text-lg">
                                        {{book.description}}
                                        </p>
                                        <h4 class="text-dark text-xl font-semibold">
                                        {{book.author}}
                                        </h4>
                                        <p class="text-body-color text-base">
                                        {{book.genre}}
                                        </p>
                                        <p class="text-body-color text-base">
                                        {{book.publishingDate}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="tab-pane fade" id="tabs-profileFill" role="tabpanel" aria-labelledby="tabs-profile-tabFill">
                <!-- Tab 2 content fill update -->
                <section class="relative z-10 overflow-hidden bg-white py-20 lg:py-[120px]">
                    <div class="container mx-auto">
                        <div class="-mx-4 flex flex-wrap lg:justify-between">
                            <div class="w-full px-4 lg:w-1/2 xl:w-6/12">
                                <div class="relative rounded-lg bg-white p-8 shadow-lg sm:p-12">
                                    <div>
                                        <img src="https://raisingintruth.com/wp-content/uploads/2016/02/coming-soon.jpg" alt="image" class="w-full"/>
                                        <div class="mb-7">
                                        {{book.title}}
                                        </div>
                                        <p class="text-body-color mb-11 text-base font-medium italic sm:text-lg">
                                        {{book.description}}
                                        </p>
                                        <h4 class="text-dark text-xl font-semibold">
                                        {{book.author}}
                                        </h4>
                                        <p class="text-body-color text-base">
                                        {{book.genre}}
                                        </p>
                                        <p class="text-body-color text-base">
                                        {{book.publishingDate}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="w-full px-4 lg:w-1/2 xl:w-5/12">
                                <div class="relative rounded-lg bg-white p-8 shadow-lg sm:p-12">
                                    <form id="update-book-form">
                                        <div class="mb-6">
                                            <input type="text"  placeholder="Book Title" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                                        </div>
                                        <div class="mb-6">
                                            <input type="text"  placeholder="Author Name" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                                        </div>
                                        <div class="mb-6">
                                            <input type="text"  placeholder="Genre" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                                        </div>
                                        <div class="mb-6">
                                            <input type="text"  placeholder="PublishedDate" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                                        </div>
                                        <div class="mb-6">
                                            <textarea rows="6" placeholder="Description" class="text-body-color border-[f0f0f0] focus:border-primary w-full resize-none rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none">
                                            </textarea>
                                        </div>
                                        <button type="submit" id='update-book-btn' class='bg-dark border-primary w-full rounded border p-3 text-black transition hover:bg-opacity-90"'> Update book </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        {{> footer}}
    </section>