<section class='h-full mb-12'>
  <ul class='flex flex-row md:flex-row list-none border-b-0 pl-0 mb-4'>
    <a
      href='/books/'
      class='w-full block font-medium text-center text-xs leading-tight uppercase border-x-0 border-t-0 border-b-2 border-transparent px-6 py-3 my-2 hover:border-transparent hover:bg-gray-100 focus:border-transparent'
    >All Books</a>
    <a
      href='/books/trending'
      class='w-full block font-medium text-center text-xs leading-tight uppercase border-x-0 border-t-0 border-b-2 border-transparent px-6 py-3 my-2 hover:border-transparent hover:bg-gray-100 focus:border-transparent'
    >
      Trending
    </a>
    <a
      href='/books/recent'
      class='w-full block font-medium text-center text-xs leading-tight uppercase border-x-0 border-t-0 border-b-2 px-6 py-3 my-2 text-blue-600 hover:border-b-blue-600 hover:bg-gray-100 focus:border-transparent active'
    >Recently Added</a>
    <a
      href='#tabs-mstpopular'
      class='nav-link w-full block font-medium text-center text-xs leading-tight uppercase border-x-0 border-t-0 border-b-2 border-transparent px-6 py-3 my-2 hover:border-transparent hover:bg-gray-100 focus:border-transparent'
      id='tabs-mst-popular'
    >Most Popular</a>
    <a
      href='#tabs-bs'
      class='nav-link w-full block font-medium text-center text-xs leading-tight uppercase border-x-0 border-t-0 border-b-2 border-transparent px-6 py-3 my-2 hover:border-transparent hover:bg-gray-100 focus:border-transparent'
      id='tabs-best-seller'
    >Best Seller</a>
    <a
      href='#tabs-top50'
      class='nav-link w-full block font-medium text-center text-xs leading-tight uppercase border-x-0 border-t-0 border-b-2 border-transparent px-6 py-3 my-2 hover:border-transparent hover:bg-gray-100 focus:border-transparent'
      id='tabs-top-50'
    >Top 50</a>
  </ul>
  <div class='tab-content' id='tabs-tabContent'>
    <div class='tab-pane fade show active' id='tabs-trending'>
      <section class='flex flex-col justify-center gap-2'>
        <h1
          class='text-2xl text-yellow-500 font-bold border-b-2 border-black'
        >Recently Added Books</h1>
        {{#each books.Books}}
          <a
            href='/{{id}}'
            class='flex flex-col justify-center bg-gray-50 p-2 rounded-md w-full hover:opacity-70'
          >
            <h2 class=''>
              {{format_title title}}
            </h2>
            <p>by {{author}}</p>
          </a>
        {{/each}}
      </section>
    </div>
    <div class='tab-pane fade' id='tabs-recnadd'>
      Recently added
    </div>
    <div class='tab-pane fade' id='tabs-mstpopular'>
      most Popular
    </div>
    <div class='tab-pane fade' id='tabs-bs'>
      B S
    </div>
    <div class='tab-pane fade' id='tabs-top50'>
      TOP 50
    </div>
  </div>
</section>