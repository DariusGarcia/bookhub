<section class="relative z-10 overflow-hidden bg-white py-20 lg:py-[120px]">
            <div class="container mx-auto">
                <div class="-mx-4 flex flex-wrap lg:justify-between">
                    <div class="w-full px-4 lg:w-1/2 xl:w-6/12">
                        <div class="mb-12 max-w-[570px] lg:mb-0">
                            <h2 class="text-primary mb-4 block text-base font-semibold">
                            Add the Books
                            </h2>
                            <h3 class="text-dark mb-6 text-[32px] font-bold uppercase sm:text-[40px] lg:text-[36px] xl:text-[40px]">
                            Please provide everything for the books
                            </h3>
                            <p class="text-body-color mb-9 text-base leading-relaxed">
                            Please Note that everything must be as same as the book.
                            </p>
                            <div class="mb-8 flex w-full max-w-[370px]">
                            <div class="w-full">
                                <h4 class="text-dark mb-1 text-xl font-bold">Title of the Book</h4>
                                <p class="text-body-color text-base">
                                Please provide the title of the book
                                </p>
                            </div>
                            </div>
                            <div class="mb-8 flex w-full max-w-[370px]">
                                <div class="w-full">
                                <h4 class="text-dark mb-1 text-xl font-bold">Author Name</h4>
                                <p class="text-body-color text-base">
                                    Please provide the Author Name of the book
                                </p>
                                </div>
                            </div>
                            <div class="mb-8 flex w-full max-w-[370px]">
                                <div class="w-full">
                                <h4 class="text-dark mb-1 text-xl font-bold">Genre</h4>
                                <p class="text-body-color text-base">
                                    Please provide the Genre of the book
                                </p>
                                </div>
                            </div>
                            <div class="mb-8 flex w-full max-w-[370px]">
                                <div class="w-full">
                                <h4 class="text-dark mb-1 text-xl font-bold">Published Date</h4>
                                <p class="text-body-color text-base">
                                    Please provide the Published Date of the book
                                </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="w-full px-4 lg:w-1/2 xl:w-5/12">
                        <div class="relative rounded-lg bg-white p-8 shadow-lg sm:p-12">
                            <form id="book-form" >
                            <div class="mb-6">
                                <input id='book-form-title-input' type="text" placeholder="Book Title" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                            </div>
                            <div class="mb-6">
                                <input id='book-form-author-input' type="text" placeholder="Author Name" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                            </div>
                            <div class="mb-6">
                                <input id='book-form-genre-input' type="text" placeholder="Genre" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                            </div>
                            <div class="mb-6">
                                <input id='book-form-datePublished-input' type="text" placeholder="Date published" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                            </div>
                            <div class="mb-6">
                                <textarea id='book-form-description-input' rows="6" placeholder="Description" class="text-body-color border-[f0f0f0] focus:border-primary w-full resize-none rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none">
                                </textarea>
                            </div>
                            <div>
                                <button  id='book-submit-btn' type="submit" class="bg-dark border-primary w-full rounded border p-3 text-black transition hover:bg-opacity-90">
                                Add Book
                                </button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script src="/js/books.js"></script>