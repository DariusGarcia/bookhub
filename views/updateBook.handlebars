<section class="bg-white py-8 container mx-auto w-1/2 md:w-full xl:w-1/2 p-6 flex flex-col">   
        <section class="relative  overflow-hidden bg-white py-20 lg:py-[120px]">
            <div class="container mx-auto">
                <div class="-mx-4 flex flex-wrap lg:justify-between">
                    <div class="w-full px-4 lg:w-1/2 xl:w-6/12">
                        <div class="relative rounded-lg bg-white p-8 shadow-lg sm:p-12">
                            <div>
                                <img src="https://product-images.tcgplayer.com/274461.jpg" alt="image" class="w-full"/>
                                <div class="mb-7">
                                  Book Title
                                </div>
                                <p class="text-body-color mb-11 text-base font-medium italic sm:text-lg">
                                  bunch of description here
                                </p>
                                <h4 class="text-dark text-xl font-semibold">
                                  Author
                                </h4>
                                <p class="text-body-color text-base">
                                  Genre
                                </p>
                                <p class="text-body-color text-base">
                                  Published
                                </p>
                              </div>
                        </div>
                    </div>
                    <div class="w-full px-4 lg:w-1/2 xl:w-5/12">
                        <div class="relative rounded-lg bg-white p-8 shadow-lg sm:p-12">
                            <form id="update-book-form">
                                <input type="text" id="hidden-book-id" hidden value="{{book.id}}">
                            <div class="mb-6">
                                <input type="text"  id="book-form-title-input" placeholder="Book Title" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                            </div>
                            <div class="mb-6">
                                <input type="text" id="book-form-author-input"  placeholder="Author Name" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                            </div>
                            <div class="mb-6">
                                <input type="text" id="book-form-genre-input"  placeholder="Genre" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                            </div>
                            <div class="mb-6">
                                <input type="text"  id="book-form-datePublished-input"placeholder="PublishedDate" class="text-body-color border-[f0f0f0] focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                            </div>
                            <div class="mb-6">
                                <input type="text" rows="6" id="book-form-description-input" placeholder="Description" class="text-body-color border-[f0f0f0] focus:border-primary w-full resize-none rounded border py-3 px-[14px] text-base outline-none focus-visible:shadow-none"/>
                                </input>
                            </div>
                            <div>
                                <button  type="submit" class="bg-dark border-primary w-full rounded border p-3 text-black transition hover:bg-opacity-90">
                                Update
                                </button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        {{> footer}}
    </section>
    <script src='/js/books.js'></script>